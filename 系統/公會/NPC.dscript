                    # } else if 有公會 {
                        # - narrate "*- <gray>1. 創立公會 (你已經有公會)"
                    # }
                # - if 沒公會 {
                        # - narrate "*- 2. 公會創立任務"
                    # } else if 有公會 {
                        # - narrate "*- <gray>2. 公會創立任務 (你已經有公會)"
                    # }
                # - if 沒公會 {
                        # - narrate "*- <gray>3. 解散公會"
                    # } else if 有公會不是會長 {
                        # - narrate "*- 3. 解散公會 <red>(你不是公會會長)"
                    # } else if 有公會是會長 {
                        # - narrate "*- 3. 解散公會"
                    # }
                
            chat trigger:
                1:
                    trigger: "我想要創立公會/Regex:(?=創立|1)/"
                    script: 
                    - ^engage
                    - inject yamltest p:Talking
                    - ^disengage
                    
                2:
                    trigger: "我想要執行公會創立任務/Regex:(?=任務|2)/"
                    script: 
                    - ^engage
                    - narrate "任務www"
                    - ^disengage
                    
                3:
                    trigger: "我想要解散公會/Regex:(?=解散|3)/"
                    script: 
                    - ^engage
                    - narrate "解散www"
