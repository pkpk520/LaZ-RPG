                script:
                - narrate "<blue><npc.name><white>： 你好, 需要什麼服務嗎?"
                - ^narrate "*---------------服務項目---------------"
                - ^narrate "*- 1. 創立公會 <red>(需要先完成公會創立任務)"
                - ^narrate "*- 2. 公會創立任務"
                - ^narrate "*- 3. <gray>解散公會"
                    
